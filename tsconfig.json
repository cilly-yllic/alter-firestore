{
  "compilerOptions": {
    "target": "esNext",
    "module": "NodeNext",
    "types": ["jest", "node"],
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "./src",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": "./",
    "paths": {
      "alter-firestore/types/*": ["./dist/types/*.js"],
      "alter-firestore/utils/*": ["./dist/utils/*.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/__tests__/**"]
}
