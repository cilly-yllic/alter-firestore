{
  "compilerOptions": {
    "target": "esNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "strict": true,
    "outDir": "lib",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": "./",
    "paths": {
      "alter-firestore/types/*": ["./lib/src/types/*.js"],
      "alter-firestore/utils/*": ["./lib/src/utils/*.js"]
    }
  },
  "include": ["src/**/*"]
}
